{
    "manifestVersion": 1,
    "id": "owasp-zap-scan",
    "name": "OWASP Zed Attack Proxy Scan",
    "publisher": "kasunkodagoda",
    "version": "0.0.0",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Visual Studio Team Services build/release task for running OWASP ZAP automated security tests. Run active scan against a target with security risk thresholds and ability to generate the scan report.",
    "categories": [
        "Build and release"
    ],
    "screenshots": [
        {
            "path": "screenshots/add-owasp-zap-scan.PNG"
        },
        {
            "path": "screenshots/zap-api-configuration.PNG"
        },
        {
            "path": "screenshots/configure-reports.PNG"
        }
    ],
    "galleryFlags": [
        "Public"
    ],
    "tags": [ "build", "release", "security", "testing", "owasp", "zaproxy", "security-scan", "security-testing", "vulnerabilities", "pen-testing", "penetration-testing", "scan" ],
    "icons": {
        "default": "marketplace-icon.png"        
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "LICENSE.md"
        },
        "privacypolicy": {
            "path": "privacy-policy.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/kasunkv/owasp-zap-vsts-task/wiki"
        },
        "support": {
            "uri": "https://github.com/kasunkv/owasp-zap-vsts-task/issues"
        },
        "repository": {
            "uri": "https://github.com/kasunkv/owasp-zap-vsts-task"
        },
        "issues": {
            "uri": "https://github.com/kasunkv/owasp-zap-vsts-task/issues"
        }        
    },
    "branding": {
        "color": "rgb(34, 56, 108)",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/kasunkv/owasp-zap-vsts-task"
    },
    "files": [
        {
            "path": "dist/BuildTask"
        },
        {
            "path": "screenshots",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "owasp-zap-scan",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "dist/BuildTask/OwaspZapScan"
            }
        }
    ],
    "CustomerQnASupport": {
        "enableqna":"true"
    } 
}